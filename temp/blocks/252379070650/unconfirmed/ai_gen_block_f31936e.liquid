{% doc %}
  @prompt
    add form 
    name
    email
    message 
    and Get with ""I agree to receive further information about new products by email."
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-contact-form-{{ ai_gen_id }} {
    padding: {{ block.settings.padding }}px;
    background-color: {{ block.settings.background_color }};
    border-radius: {{ block.settings.border_radius }}px;
    max-width: {{ block.settings.max_width }}px;
    margin: 0 auto;
  }

  .ai-contact-form__heading-{{ ai_gen_id }} {
    color: {{ block.settings.text_color }};
    margin: 0 0 24px;
    font-size: {{ block.settings.heading_size }}px;
  }

  .ai-contact-form__form-{{ ai_gen_id }} {
    display: flex;
    flex-direction: column;
    gap: 16px;
  }

  .ai-contact-form__field-{{ ai_gen_id }} {
    display: flex;
    flex-direction: column;
    gap: 8px;
  }

  .ai-contact-form__label-{{ ai_gen_id }} {
    color: {{ block.settings.text_color }};
    font-size: {{ block.settings.label_size }}px;
    font-weight: 500;
  }

  .ai-contact-form__input-{{ ai_gen_id }},
  .ai-contact-form__textarea-{{ ai_gen_id }} {
    padding: 12px 16px;
    border: {{ block.settings.input_border_thickness }}px solid {{ block.settings.input_border_color }};
    border-radius: {{ block.settings.input_border_radius }}px;
    font-size: {{ block.settings.input_text_size }}px;
    background-color: {{ block.settings.input_background_color }};
    color: {{ block.settings.input_text_color }};
    width: 100%;
  }

  .ai-contact-form__input-{{ ai_gen_id }}:focus,
  .ai-contact-form__textarea-{{ ai_gen_id }}:focus {
    outline: 2px solid {{ block.settings.input_focus_color }};
    outline-offset: 2px;
  }

  .ai-contact-form__textarea-{{ ai_gen_id }} {
    min-height: 120px;
    resize: vertical;
  }

  .ai-contact-form__checkbox-wrapper-{{ ai_gen_id }} {
    display: flex;
    align-items: flex-start;
    gap: 12px;
  }

  .ai-contact-form__checkbox-{{ ai_gen_id }} {
    margin-top: 4px;
    width: 18px;
    height: 18px;
    cursor: pointer;
    flex-shrink: 0;
  }

  .ai-contact-form__checkbox-label-{{ ai_gen_id }} {
    color: {{ block.settings.text_color }};
    font-size: {{ block.settings.label_size }}px;
    cursor: pointer;
  }

  .ai-contact-form__button-{{ ai_gen_id }} {
    padding: 14px 28px;
    background-color: {{ block.settings.button_color }};
    color: {{ block.settings.button_text_color }};
    border: none;
    border-radius: {{ block.settings.button_border_radius }}px;
    font-size: {{ block.settings.button_text_size }}px;
    cursor: pointer;
    transition: background-color 0.3s ease;
    width: 100%;
  }

  .ai-contact-form__button-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.button_hover_color }};
  }

  .ai-contact-form__success-{{ ai_gen_id }} {
    color: {{ block.settings.success_color }};
    padding: 12px;
    background-color: {{ block.settings.success_bg_color }};
    border-radius: {{ block.settings.input_border_radius }}px;
    font-size: {{ block.settings.input_text_size }}px;
  }

  .ai-contact-form__error-{{ ai_gen_id }} {
    color: {{ block.settings.error_color }};
    font-size: {{ block.settings.label_size }}px;
    margin-top: 4px;
  }

  @media screen and (max-width: 749px) {
    .ai-contact-form-{{ ai_gen_id }} {
      padding: {{ block.settings.padding | times: 0.6 }}px;
    }
  }
{% endstyle %}

<div
  class="ai-contact-form-{{ ai_gen_id }}"
  {{ block.shopify_attributes }}
>
  {%- if block.settings.heading != blank -%}
    <h2 class="ai-contact-form__heading-{{ ai_gen_id }}">{{ block.settings.heading }}</h2>
  {%- endif -%}

  {%- form 'contact' -%}
    <div class="ai-contact-form__form-{{ ai_gen_id }}">
      {%- if form.posted_successfully? -%}
        <div
          id="ai-contact-form-success-{{ ai_gen_id }}"
          class="ai-contact-form__success-{{ ai_gen_id }}"
        >
          {{ block.settings.success_message }}
        </div>
      {%- else -%}
        <div class="ai-contact-form__field-{{ ai_gen_id }}">
          <label
            for="ai-contact-form-name-{{ ai_gen_id }}"
            class="ai-contact-form__label-{{ ai_gen_id }}"
          >
            {{ block.settings.name_label }}
          </label>
          <input
            type="text"
            id="ai-contact-form-name-{{ ai_gen_id }}"
            name="contact[name]"
            class="ai-contact-form__input-{{ ai_gen_id }}"
            value="{{ form.name }}"
            placeholder="{{ block.settings.name_placeholder }}"
            required
          >
        </div>

        <div class="ai-contact-form__field-{{ ai_gen_id }}">
          <label
            for="ai-contact-form-email-{{ ai_gen_id }}"
            class="ai-contact-form__label-{{ ai_gen_id }}"
          >
            {{ block.settings.email_label }}
          </label>
          <input
            type="email"
            id="ai-contact-form-email-{{ ai_gen_id }}"
            name="contact[email]"
            class="ai-contact-form__input-{{ ai_gen_id }}"
            value="{{ form.email }}"
            autocorrect="off"
            autocapitalize="off"
            autocomplete="email"
            placeholder="{{ block.settings.email_placeholder }}"
            {% if form.errors %}
              aria-invalid="true"
              aria-describedby="ai-contact-form-email-error-{{ ai_gen_id }}"
            {% endif %}
            required
          >
          {%- if form.errors -%}
            {%- assign email_error = form.errors.messages.email -%}
            {%- if email_error -%}
              <div
                id="ai-contact-form-email-error-{{ ai_gen_id }}"
                class="ai-contact-form__error-{{ ai_gen_id }}"
              >
                {{ email_error }}
              </div>
            {%- endif -%}
          {%- endif -%}
        </div>

        <div class="ai-contact-form__field-{{ ai_gen_id }}">
          <label
            for="ai-contact-form-message-{{ ai_gen_id }}"
            class="ai-contact-form__label-{{ ai_gen_id }}"
          >
            {{ block.settings.message_label }}
          </label>
          <textarea
            id="ai-contact-form-message-{{ ai_gen_id }}"
            name="contact[body]"
            class="ai-contact-form__textarea-{{ ai_gen_id }}"
            placeholder="{{ block.settings.message_placeholder }}"
            required
          >{{ form.body }}</textarea>
        </div>

        <div class="ai-contact-form__field-{{ ai_gen_id }}">
          <div class="ai-contact-form__checkbox-wrapper-{{ ai_gen_id }}">
            <input
              type="checkbox"
              id="ai-contact-form-consent-{{ ai_gen_id }}"
              name="contact[consent]"
              class="ai-contact-form__checkbox-{{ ai_gen_id }}"
              value="yes"
              required
            >
            <label
              for="ai-contact-form-consent-{{ ai_gen_id }}"
              class="ai-contact-form__checkbox-label-{{ ai_gen_id }}"
            >
              {{ block.settings.consent_text }}
            </label>
          </div>
        </div>

        <button
          type="submit"
          class="ai-contact-form__button-{{ ai_gen_id }}"
        >
          {{ block.settings.button_text }}
        </button>
      {%- endif -%}
    </div>
  {%- endform -%}
</div>

