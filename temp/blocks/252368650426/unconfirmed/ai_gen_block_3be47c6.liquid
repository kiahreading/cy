{% doc %}
  @prompt
    add form
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-contact-form-{{ ai_gen_id }} {
    padding: {{ block.settings.padding }}px;
    background-color: {{ block.settings.background_color }};
    border-radius: {{ block.settings.border_radius }}px;
    max-width: {{ block.settings.max_width }}px;
    margin: 0 auto;
  }

  .ai-contact-form__heading-{{ ai_gen_id }} {
    color: {{ block.settings.text_color }};
    margin: 0 0 8px 0;
    font-size: {{ block.settings.heading_size }}px;
    text-align: {{ block.settings.text_alignment }};
  }

  .ai-contact-form__subtext-{{ ai_gen_id }} {
    color: {{ block.settings.text_color }};
    margin: 0 0 24px 0;
    text-align: {{ block.settings.text_alignment }};
  }

  .ai-contact-form__form-{{ ai_gen_id }} {
    display: flex;
    flex-direction: column;
    gap: 16px;
  }

  .ai-contact-form__field-{{ ai_gen_id }} {
    display: flex;
    flex-direction: column;
    gap: 8px;
  }

  .ai-contact-form__label-{{ ai_gen_id }} {
    color: {{ block.settings.text_color }};
    font-size: 14px;
    font-weight: 500;
  }

  .ai-contact-form__input-{{ ai_gen_id }},
  .ai-contact-form__textarea-{{ ai_gen_id }} {
    padding: 12px 16px;
    border: 1px solid {{ block.settings.input_border_color }};
    border-radius: {{ block.settings.input_border_radius }}px;
    font-size: 14px;
    font-family: inherit;
    width: 100%;
    box-sizing: border-box;
  }

  .ai-contact-form__input-{{ ai_gen_id }}:focus,
  .ai-contact-form__textarea-{{ ai_gen_id }}:focus {
    outline: 2px solid {{ block.settings.button_color }};
    outline-offset: 2px;
  }

  .ai-contact-form__textarea-{{ ai_gen_id }} {
    min-height: 120px;
    resize: vertical;
  }

  .ai-contact-form__button-{{ ai_gen_id }} {
    padding: 14px 28px;
    background-color: {{ block.settings.button_color }};
    color: {{ block.settings.button_text_color }};
    border: none;
    border-radius: {{ block.settings.button_border_radius }}px;
    cursor: pointer;
    font-size: 16px;
    font-weight: 500;
    transition: background-color 0.3s ease;
  }

  .ai-contact-form__button-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.button_hover_color }};
  }

  .ai-contact-form__success-{{ ai_gen_id }} {
    color: {{ block.settings.success_color }};
    padding: 12px;
    background-color: {{ block.settings.success_color | color_modify: 'alpha', 0.1 }};
    border-radius: {{ block.settings.input_border_radius }}px;
    margin-bottom: 16px;
  }

  .ai-contact-form__error-{{ ai_gen_id }} {
    color: {{ block.settings.error_color }};
    font-size: 14px;
    margin-top: 4px;
  }

  .ai-contact-form__field-error-{{ ai_gen_id }} {
    border-color: {{ block.settings.error_color }};
  }

  @media screen and (max-width: 749px) {
    .ai-contact-form-{{ ai_gen_id }} {
      padding: {{ block.settings.padding | times: 0.6 }}px;
    }
  }
{% endstyle %}

<div class="ai-contact-form-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  {%- if block.settings.heading != blank -%}
    <h2 class="ai-contact-form__heading-{{ ai_gen_id }}">{{ block.settings.heading }}</h2>
  {%- endif -%}

  {%- if block.settings.subtext != blank -%}
    <div class="ai-contact-form__subtext-{{ ai_gen_id }}">{{ block.settings.subtext }}</div>
  {%- endif -%}

  {%- form 'contact' -%}
    {%- if form.posted_successfully? -%}
      <div
        id="ai-contact-form-success-{{ ai_gen_id }}"
        class="ai-contact-form__success-{{ ai_gen_id }}"
      >
        {{ block.settings.success_message }}
      </div>
    {%- endif -%}

    <div class="ai-contact-form__form-{{ ai_gen_id }}">
      <div class="ai-contact-form__field-{{ ai_gen_id }}">
        <label for="ai-contact-name-{{ ai_gen_id }}" class="ai-contact-form__label-{{ ai_gen_id }}">
          Name
        </label>
        <input
          type="text"
          id="ai-contact-name-{{ ai_gen_id }}"
          name="contact[name]"
          class="ai-contact-form__input-{{ ai_gen_id }}"
          value="{{ form.name }}"
          autocomplete="name"
          required
        >
      </div>

      <div class="ai-contact-form__field-{{ ai_gen_id }}">
        <label for="ai-contact-email-{{ ai_gen_id }}" class="ai-contact-form__label-{{ ai_gen_id }}">
          Email
        </label>
        <input
          type="email"
          id="ai-contact-email-{{ ai_gen_id }}"
          name="contact[email]"
          class="ai-contact-form__input-{{ ai_gen_id }} {% if form.errors contains 'email' %}ai-contact-form__field-error-{{ ai_gen_id }}{% endif %}"
          value="{{ form.email }}"
          autocorrect="off"
          autocapitalize="off"
          autocomplete="email"
          {% if form.errors contains 'email' %}
            aria-invalid="true"
            aria-describedby="ai-contact-email-error-{{ ai_gen_id }}"
          {% endif %}
          required
        >
        {%- if form.errors contains 'email' -%}
          <div
            id="ai-contact-email-error-{{ ai_gen_id }}"
            class="ai-contact-form__error-{{ ai_gen_id }}"
          >
            {{ form.errors.messages.email }}
          </div>
        {%- endif -%}
      </div>

      {%- if block.settings.show_phone -%}
        <div class="ai-contact-form__field-{{ ai_gen_id }}">
          <label for="ai-contact-phone-{{ ai_gen_id }}" class="ai-contact-form__label-{{ ai_gen_id }}">
            Phone number
          </label>
          <input
            type="tel"
            id="ai-contact-phone-{{ ai_gen_id }}"
            name="contact[phone]"
            class="ai-contact-form__input-{{ ai_gen_id }}"
            value="{{ form.phone }}"
            autocomplete="tel"
          >
        </div>
      {%- endif -%}

      <div class="ai-contact-form__field-{{ ai_gen_id }}">
        <label for="ai-contact-message-{{ ai_gen_id }}" class="ai-contact-form__label-{{ ai_gen_id }}">
          Message
        </label>
        <textarea
          id="ai-contact-message-{{ ai_gen_id }}"
          name="contact[body]"
          class="ai-contact-form__textarea-{{ ai_gen_id }}"
          required
        >{{ form.body }}</textarea>
      </div>

      <button type="submit" class="ai-contact-form__button-{{ ai_gen_id }}">
        {{ block.settings.button_label }}
      </button>
    </div>
  {%- endform -%}
</div>

{% schema %}
{
  "name": "Contact form",
  "tag": null,
  "settings": [
    {
      "type": "header",
      "content": "Content"
    },
    {
      "type": "richtext",
      "id": "heading",
      "label": "Heading",
      "default": "<p>Get in touch</p>"
    },
    {
      "type": "richtext",
      "id": "subtext",
      "label": "Subtext",
      "default": "<p>We'd love to hear from you. Send us a message and we'll respond as soon as possible.</p>"
    },
    {
      "type": "select",
      "id": "text_alignment",
      "label": "Text alignment",
      "options": [
        {
          "value": "left",
          "label": "Left"
        },
        {
          "value": "center",
          "label": "Center"
        },
        {
          "value": "right",
          "label": "Right"
        }
      ],
      "default": "left"
    },
    {
      "type": "checkbox",
      "id": "show_phone",
      "label": "Show phone number field",
      "default": false
    },
    {
      "type": "inline_richtext",
      "id": "button_label",
      "label": "Button label",
      "default": "Send message"
    },
    {
      "type": "richtext",
      "id": "success_message",
      "label": "Success message",
      "default": "<p>Thanks for contacting us. We'll get back to you as soon as possible.</p>"
    },
    {
      "type": "header",
      "content": "Style"
    },
    {
      "type": "range",
      "id": "heading_size",
      "min": 16,
      "max": 48,
      "step": 2,
      "unit": "px",
      "label": "Heading size",
      "default": 32
    },
    {
      "type": "range",
      "id": "max_width",
      "min": 400,
      "max": 1000,
      "step": 50,
      "unit": "px",
      "label": "Maximum width",
      "default": 600
    },
    {
      "type": "range",
      "id": "padding",
      "min": 0,
      "max": 80,
      "step": 4,
      "unit": "px",
      "label": "Padding",
      "default": 40
    },
    {
      "type": "range",
      "id": "border_radius",
      "min": 0,
      "max": 40,
      "step": 2,
      "unit": "px",
      "label": "Border radius",
      "default": 8
    },
    {
      "type": "range",
      "id": "input_border_radius",
      "min": 0,
      "max": 40,
      "step": 2,
      "unit": "px",
      "label": "Input border radius",
      "default": 4
    },
    {
      "type": "range",
      "id": "button_border_radius",
      "min": 0,
      "max": 40,
      "step": 2,
      "unit": "px",
      "label": "Button border radius",
      "default": 4
    },
    {
      "type": "header",
      "content": "Colors"
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Background",
      "default": "#f9f9f9"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text",
      "default": "#000000"
    },
    {
      "type": "color",
      "id": "input_border_color",
      "label": "Input border",
      "default": "#cccccc"
    },
    {
      "type": "color",
      "id": "button_color",
      "label": "Button background",
      "default": "#000000"
    },
    {
      "type": "color",
      "id": "button_text_color",
      "label": "Button text",
      "default": "#ffffff"
    },
    {
      "type": "color",
      "id": "button_hover_color",
      "label": "Button hover background",
      "default": "#333333"
    },
    {
      "type": "color",
      "id": "success_color",
      "label": "Success",
      "default": "#008060"
    },
    {
      "type": "color",
      "id": "error_color",
      "label": "Error",
      "default": "#D82C0D"
    }
  ],
  "presets": [
    {
      "name": "Contact form"
    }
  ]
}
{% endschema %}
