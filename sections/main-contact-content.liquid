<h1 class="visually-hidden">
  {{ page.title | escape }}
</h1>

<div class="">
  <div class="">
    <address
      class=""
    >
      <a
        href="{{ block.settings.address_url }}"
        target="_blank"
        {{ block.settings.address_text | escape }}
      ></a>
    </address>

    <p
      class=""
    >
      {{ block.settings.contact_text }}
    </p>

    <address
      class=""
    >
      {%- if settings.social_instagram_link != blank -%}
        <a href="{{ settings.social_instagram_link }}">Instagram</a>
      {% endif %}
      {%- if shop.email != blank -%}
        <a href="mailto:{{ shop.email }}">{{ shop.email }}</a>
      {% endif %}
      {%- if shop.phone != blank -%}
        <a href="tel:{{ shop.phone }}">{{ shop.phone }}</a>
      {% endif %}
    </address>

    <p>
      &copy; {{ shop.name }}
      {{ 'now' | date: '%Y' }}
    </p>
  </div>
</div>

{% schema %}
{
  "name": "Contact details",
  "tag": "section",
  "class": "section",
  "enabled_on": {
    "templates": ["page"],
    "groups": ["aside"]
  },
  "settings": [
    {
      "type": "text",
      "id": "address_text",
      "default": "7296 NW 1st Ct, Miami FL 33150",
      "label": "Address"
    },
    {
      "type": "url",
      "id": "address_url",
      "label": "Address URL"
    },
    {
      "type": "textarea",
      "id": "contact_text",
      "label": "Contact text"
    }
  ]
}
{% endschema %}
