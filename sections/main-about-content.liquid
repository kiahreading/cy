<h1 class="visually-hidden">
  {{ page.title | escape }}
</h1>

<div class="about-content">
  <div class="about-content__container">
    <div class="about-content__images">
      {%- if section.settings.image != blank -%}
        <div class="">
          {{
            section.settings.image
            | image_url: width: 400
            | image_tag:
              width: image_height,
              height: image_height,
              class: image_class,
              sizes: sizes,
              widths: widths,
              fetchpriority: fetch_priority
          }}
        </div>
      {%- endif -%}
      {%- if section.settings.image_2 != blank -%}
        <div class="">
          {{
            section.settings.image_2
            | image_url: width: 400
            | image_tag:
              width: image_height,
              height: image_height,
              class: image_class,
              sizes: sizes,
              widths: widths,
              fetchpriority: fetch_priority
          }}
        </div>
      {%- endif -%}
    </div>
    <div class="about-content__text">
      <p>
        {{ section.settings.content_text }}
      </p>
    </div>
    <div class="about-content__images"></div>
  </div>
</div>

{% schema %}
{
  "name": "About content",
  "tag": "section",
  "class": "section",
  "enabled_on": {
    "templates": ["page"],
    "groups": ["aside"]
  },
  "settings": [
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image one"
    },
    {
      "type": "image_picker",
      "id": "image_2",
      "label": "Image two"
    },
    {
      "type": "textarea",
      "id": "content_text",
      "label": "Text"
    }
  ]
}
{% endschema %}
